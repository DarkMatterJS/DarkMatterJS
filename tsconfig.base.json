{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2017",
    // "sourceMap": true,
    // "declaration": true,
    // "declarationMap": true,
    "lib": ["esnext"],
    "types": ["node", "jest"]
  }
}
