{
  "name": "darkmatterjs-config",
  "version": "0.0.0-development",
  "private": true,
  "url": "https://github.com/darkmatterjs/darkmatterjs-config",
  "repository": "https://github.com/darkmatterjs/darkmatterjs-config",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "lerna run build",
    "clean": "lerna clean && lerna run clean",
    "lint": "eslint . --ext .js,.ts",
    "pre-commit": "yarn lint-staged",
    "commit": "git-cz",
    "pre-push": "yarn format-check",
    "postinstall": "lerna bootstrap && yarn build && lerna link",
    "check-clean-workspace-after-install": "git diff --quiet --exit-code",
    "test": "lerna run test --concurrency 1",
    "typecheck": "lerna run typecheck",
    "format": "run-s format:*",
    "format:prettier": "prettier --write \"./**/*.{ts,js,json,md}\"",
    "format:eslint": "eslint . --ext .js,.ts --fix",
    "format-check": "prettier --list-different \"./**/*.{ts,json,md}\"",
    "prepare-release": "standard-version",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/eslint": "^6.1.8",
    "@types/jest": "^25.1.0",
    "@types/node": "^13.9.2",
    "@types/prettier": "^1.19.0",
    "@types/semantic-release": "^15.13.1",
    "@types/standard-version": "^7.0.0",
    "commitizen": "^4.0.3",
    "cz-emoji": "^1.2.1",
    "cz-conventional-changelog": "^3.0.2",
    "eslint": "^6.8.0",
    "eslint-plugin-eslint-plugin": "^2.1.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.1",
    "semantic-release": "^17.0.4",
    "standard-version": "^7.1.0",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.8.1",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3"
  }
}
